{
  "manifest_version": 2,
  "name": "Detector de Conexões a Domínios de Terceiros",
  "version": "1.0",
  "description": "Um plugin para detectar e apresentar o número de conexões a domínios de terceiros em uma navegação web.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "cookies",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "icons": {
    "48": "icon.png"
  }
}
